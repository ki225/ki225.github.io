<script>
  const titles = ["Yung-Chi (Kiki) Huang", "an Active Learner", "Team Player", "a DAY ONE person", "a Backend Developer", "a Cafe Hopper"];
  let titleIndex = 0;
  let charIndex = 0;
  const dynamicTitle = document.getElementById('dynamicTitle');

  function typeTitle() {
    if (charIndex < titles[titleIndex].length) {
      dynamicTitle.textContent = titles[titleIndex].substring(0, charIndex + 1);
      charIndex++;
      setTimeout(typeTitle, 100);
    } else {
      setTimeout(eraseTitle, 1500);
    }
  }

  function eraseTitle() {
    if (charIndex > 0) {
      dynamicTitle.textContent = titles[titleIndex].substring(0, charIndex - 1);
      charIndex--;
      setTimeout(eraseTitle, 50);
    } else {
      titleIndex = (titleIndex + 1) % titles.length;
      setTimeout(typeTitle, 500);
    }
  }

  typeTitle();

  function adjustTitleFontSize() {
    const titleContainer = document.querySelector('.title-container');
    const titleText = document.querySelector('.markdown-body.title-text');
    
    // 獲取當前文本寬度
    const textWidth = titleText.scrollWidth;
    // 獲取容器寬度
    const containerWidth = titleContainer.clientWidth;
    
    if (textWidth > containerWidth) {
      // 如果文本寬度超過容器寬度，縮小字體
      const scaleFactor = containerWidth / textWidth * 0.95; // 留一點邊距
      const currentSize = parseFloat(window.getComputedStyle(titleText).fontSize);
      const newSize = currentSize * scaleFactor;
      
      // 設置最小字體大小限制
      const minSize = window.innerWidth < 768 ? 1.8 : 2.2;
      titleText.style.fontSize = Math.max(newSize, minSize) + 'rem';
    }
  }
  
  // 在每次更新標題時調用調整函數
  const originalTypeTitle = typeTitle;
  typeTitle = function() {
    originalTypeTitle();
    setTimeout(adjustTitleFontSize, 10);
  };
  
  // 在視窗大小改變時重新調整
  window.addEventListener('resize', adjustTitleFontSize);
</script>
