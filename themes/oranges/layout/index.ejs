<script>
  const titles = ["Kiki", "an Active Learner", "Team Player", "a DAY ONE person", "a Cafe Hopper"];
  let titleIndex = 0;
  let charIndex = 0;
  const dynamicTitle = document.getElementById('dynamicTitle');
  const titleContainer = document.querySelector('.title-container');
  const titleText = document.querySelector('.markdown-body.title-text');

  function typeTitle() {
    if (charIndex < titles[titleIndex].length) {
      dynamicTitle.textContent = titles[titleIndex].substring(0, charIndex + 1);
      charIndex++;
      setTimeout(adjustTitleFontSize, 10); // 每次添加字符後調整大小
      setTimeout(typeTitle, 100);
    } else {
      setTimeout(eraseTitle, 1500);
    }
  }

  function eraseTitle() {
    if (charIndex > 0) {
      dynamicTitle.textContent = titles[titleIndex].substring(0, charIndex - 1);
      charIndex--;
      setTimeout(adjustTitleFontSize, 10); // 每次刪除字符後調整大小
      setTimeout(eraseTitle, 50);
    } else {
      titleIndex = (titleIndex + 1) % titles.length;
      setTimeout(typeTitle, 500);
    }
  }

  function adjustTitleFontSize() {
    // 重置字體大小為基礎大小
    const baseSize = window.innerWidth <= 360 ? 1.8 :
                     window.innerWidth <= 480 ? 2 : 
                     window.innerWidth <= 768 ? 2.5 : 3.5;
                     
    titleText.style.fontSize = baseSize + 'rem';
    
    // 測量文字寬度
    const textWidth = titleText.scrollWidth;
    const containerWidth = titleContainer.clientWidth;
    
    if (textWidth > containerWidth) {
      // 計算縮放因子
      const scaleFactor = containerWidth / textWidth * 0.95;
      // 新的字體大小
      const newSize = baseSize * scaleFactor;
      // 最小字體大小限制
      const minSize = window.innerWidth <= 360 ? 1.4 :
                      window.innerWidth <= 480 ? 1.6 : 
                      window.innerWidth <= 768 ? 1.8 : 2;
                      
      titleText.style.fontSize = Math.max(newSize, minSize) + 'rem';
    }
  }

  async function downloadResume(event) {
    event.preventDefault();
    
    try {
      // GitHub 原始內容 URL
      const pdfUrl = 'https://raw.githubusercontent.com/ki225/ki225.github.io/main/source/files/resume.pdf';
      
      // 使用 fetch API 獲取 PDF 內容
      const response = await fetch(pdfUrl);
      const blob = await response.blob();
      
      // 創建下載鏈接
      const downloadUrl = window.URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = downloadUrl;
      a.download = 'Yung-Chi_Huang_Resume.pdf'; // 設置下載文件的名稱
      document.body.appendChild(a);
      a.click();
      
      // 清理
      window.URL.revokeObjectURL(downloadUrl);
      document.body.removeChild(a);
    } catch (error) {
      console.error('下載失敗:', error);
      // 如果下載失敗，嘗試直接在新頁面打開
      window.open('https://raw.githubusercontent.com/ki225/ki225.github.io/main/source/files/resume.pdf', '_blank');
    }
  }
  
  
  document.addEventListener('DOMContentLoaded', function() {
    typeTitle(); // 開始打字動畫
    
    // 調整圖像尺寸和間距在小螢幕上
    if (window.innerWidth <= 480) {
      const desktopImg = document.querySelector('.desktop-image-container img');
      const mobileImg = document.querySelector('.mobile-image-container img');
      
      if (desktopImg) desktopImg.style.width = "150px";
      if (mobileImg) mobileImg.style.width = "150px";
    }
  });
  
  // 在視窗改變大小時重新調整
  window.addEventListener('resize', function() {
    adjustTitleFontSize();
  });
</script>
